@page
@model IndexModel
@{
    ViewData["Title"] = "Homepage";
}

<h1 style="font-size: 25px">Pic2Website allows automatic design conversion from image into website (HTML & CSS)</h1>
<p style="margin-bottom: 10px">To begin please select one of the sample designs or upload your own and choose language of the text.</p>

<div id="error" class="alert alert-danger d-none"></div>

<div class="row">
    <div class="col-xs-12 col-md-6">
        <div class="box" style="max-height: 500px; overflow-y: scroll;">
            <strong>Choose sample design</strong>
            <form class="ajax-form" method="post" style="margin-top: 10px">
                <input type="hidden" name="sample-submit" value="" />
                @foreach (var sample in Model.SampleTemplates)
                {
                    <div class="radio">
                        <label>
                            <input type="radio" name="sample" id="sample" value="@sample.Item1">
                            @sample.Item2 - @sample.Item3
                            <br />
                            <img src="@sample.Item1" height="150px" />
                        </label>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <div class="col-xs-12 col-md-6">
        <div class="box">
            <strong>Upload custom design</strong>
            <form class="ajax-form" action="" method="post" enctype="multipart/form-data" style="margin-top: 10px">
                <input type="hidden" name="upload-submit" value="" />
                <div class="form-group">
                    <label for="upload">Image</label>
                    <input type="file" name="upload" />
                </div>
                <div class="form-group">
                    <label for="language">Language</label>
                    <select class="form-control" name="language" id="language">
                        @foreach (var language in Model.Languages)
                        {
                            <option value="@language.Key">@language.Value</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
    </div>
</div>

<div id="loading" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div style="padding: 20px;text-align: center;">
                <div class="spinner-border ml-auto mr-auto" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="mt-2">Loading...</div>
            </div>
        </div>
    </div>
</div>
