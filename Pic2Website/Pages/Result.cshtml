@page "{Uuid}"
@model Pic2Website.Pages.ResultModel
@{
}

<div class="alert alert-success">Success! Design has been succesfully converted into website. See details below.</div>
<div class="mb-4">
    <a asp-page-handler="DownloadFiles" class="btn btn-primary">
        Download files
    </a>
</div>
<div>
    <h5>Analysed structure</h5>
    <div style="max-width: 100%; max-height: 400px; overflow: auto;">
        <img src="@Model.Path/structure.png" />
    </div>
</div>
<div class="mt-4 mb-4">
    <div class="row mb-2">
        <h5 class="col col-auto" style="margin-top:7px;">Website preview</h5>
        <div class="col">
            <a class="btn btn-secondary" href="@Model.Path/index.html" target="_blank">Open in a new tab</a>
        </div>
    </div>
    <iframe src="@Model.Path/index.html" style="width: 100%; min-height: 400px;"></iframe>
</div>
<div>
    <h5>Generated files</h5>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#html" role="tab" aria-controls="html" aria-selected="true">HTML</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#css" role="tab" aria-controls="css" aria-selected="false">CSS</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="html" role="tabpanel" aria-labelledby="html-tab">
            <textarea disabled>@Model.Html</textarea>
        </div>
        <div class="tab-pane fade" id="css" role="tabpanel" aria-labelledby="css-tab">
            <textarea disabled>@Model.Css</textarea>
        </div>
    </div>
</div>
